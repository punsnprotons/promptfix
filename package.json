{
  "name": "system-prompt-tool",
  "version": "1.0.0",
  "description": "System Prompt Analysis & Auto-Repair Web App",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "db:generate": "cd packages/database && prisma generate",
    "db:push": "cd packages/database && prisma db push",
    "db:seed": "cd packages/database && prisma db seed",
    "db:studio": "cd packages/database && prisma studio"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.12",
    "turbo": "^1.10.12",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "npm@9.0.0"
}
